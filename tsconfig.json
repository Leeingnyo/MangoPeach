{
  "compilerOptions": {
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "mangopeach-core/*": ["packages/mangopeach-core/*"],
      "mangopeach-server/*": ["packages/mangopeach-server/*"],
      "mangopeach-ui/*": ["packages/mangopeach-ui/*"],
    },
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
